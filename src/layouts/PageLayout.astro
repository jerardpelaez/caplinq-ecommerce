---
import BaseLayout from './BaseLayout.astro';
import { getCollection } from 'astro:content';
import SearchBar from '../components/search/SearchBar.svelte';
import QuoteDrawer from '../components/cart/QuoteDrawer.svelte';
import MobileMenu from '../components/layout/MobileMenu.svelte';
import { NAV_ITEMS } from '../lib/constants/site';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
  jsonLd?: Record<string, unknown>;
}

const props = Astro.props;

// Build search index for the SearchBar
const allProducts = await getCollection('products', ({ data }) => data.status === 'active');
const searchProducts = allProducts.map((p) => ({
  name: p.data.name,
  slug: p.data.slug,
  category: p.data.category,
  shortDescription: p.data.shortDescription,
  sku: p.data.sku,
}));

const navItems = NAV_ITEMS.map((item) => ({ label: item.label, href: item.href }));
---

<BaseLayout {...props}>
  <!-- Header -->
  <header class="sticky top-0 z-50 bg-white border-b border-gray-200 shadow-sm">
    <!-- Top utility bar -->
    <div class="bg-navy-900 text-white text-sm hidden sm:block">
      <div class="container-site flex items-center justify-between py-1.5">
        <span>Specialty Chemicals & Electronic Materials Supplier</span>
        <nav class="flex items-center gap-4" aria-label="Utility navigation">
          <a href="/contact" class="hover:text-primary-300 transition-colors">Contact</a>
          <a href="/quote-request" class="hover:text-primary-300 transition-colors">Request Quote</a>
        </nav>
      </div>
    </div>

    <!-- Main navigation -->
    <div class="container-site">
      <div class="flex items-center justify-between py-3">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-2" aria-label="CAPLINQ Home">
          <span class="text-2xl font-bold text-primary-600">CAPLINQ</span>
        </a>

        <!-- Desktop navigation -->
        <nav class="hidden lg:flex items-center gap-6" aria-label="Main navigation">
          <a href="/products" class="text-sm font-medium text-gray-700 hover:text-primary-600 transition-colors">Products</a>
          <a href="/resources" class="text-sm font-medium text-gray-700 hover:text-primary-600 transition-colors">Resources</a>
          <a href="/blog" class="text-sm font-medium text-gray-700 hover:text-primary-600 transition-colors">Blog</a>
          <a href="/about" class="text-sm font-medium text-gray-700 hover:text-primary-600 transition-colors">About</a>
          <a href="/contact" class="text-sm font-medium text-gray-700 hover:text-primary-600 transition-colors">Contact</a>
        </nav>

        <!-- Actions -->
        <div class="flex items-center gap-3">
          <!-- Search (Svelte island) -->
          <SearchBar products={searchProducts} client:idle />

          <!-- Quote drawer (Svelte island - needs localStorage) -->
          <QuoteDrawer client:only="svelte" />

          <!-- Mobile menu (Svelte island) -->
          <MobileMenu navItems={navItems} client:idle />
        </div>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main id="main-content" class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-navy-900 text-white">
    <div class="container-site py-12">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Company info -->
        <div>
          <span class="text-xl font-bold text-white mb-4 block">CAPLINQ</span>
          <p class="text-gray-400 text-sm leading-relaxed">
            Specialty chemicals and electronic materials supplier serving the electronics, semiconductor, and industrial manufacturing industries.
          </p>
        </div>

        <!-- Products -->
        <div>
          <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-300 mb-4">Products</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/products/thermal-interface-materials" class="text-gray-400 hover:text-white transition-colors">Thermal Interface Materials</a></li>
            <li><a href="/products/adhesives-and-sealants" class="text-gray-400 hover:text-white transition-colors">Adhesives & Sealants</a></li>
            <li><a href="/products/die-attach-materials" class="text-gray-400 hover:text-white transition-colors">Die Attach Materials</a></li>
            <li><a href="/products/semiconductor-and-pcb-assembly" class="text-gray-400 hover:text-white transition-colors">Semiconductor & PCB Assembly</a></li>
            <li><a href="/products/specialty-plastics" class="text-gray-400 hover:text-white transition-colors">Specialty Plastics</a></li>
          </ul>
        </div>

        <!-- Company -->
        <div>
          <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-300 mb-4">Company</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/about" class="text-gray-400 hover:text-white transition-colors">About CAPLINQ</a></li>
            <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors">Blog</a></li>
            <li><a href="/resources" class="text-gray-400 hover:text-white transition-colors">Technical Resources</a></li>
            <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors">Contact Us</a></li>
          </ul>
        </div>

        <!-- Contact -->
        <div>
          <h3 class="text-sm font-semibold uppercase tracking-wider text-gray-300 mb-4">Get in Touch</h3>
          <ul class="space-y-2 text-sm text-gray-400">
            <li>CAPLINQ Corporation</li>
            <li>
              <a href="mailto:info@caplinq.com" class="hover:text-white transition-colors">info@caplinq.com</a>
            </li>
          </ul>
          <a href="/quote-request" class="btn-accent mt-4 text-sm">Request a Quote</a>
        </div>
      </div>

      <!-- Bottom bar -->
      <div class="border-t border-gray-800 mt-8 pt-6 flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-sm text-gray-500">&copy; {new Date().getFullYear()} CAPLINQ Corporation. All rights reserved.</p>
        <nav class="flex gap-4 text-sm text-gray-500" aria-label="Legal">
          <a href="/privacy" class="hover:text-white transition-colors">Privacy Policy</a>
          <a href="/terms" class="hover:text-white transition-colors">Terms of Service</a>
        </nav>
      </div>
    </div>
  </footer>
</BaseLayout>
