---
import PageLayout from './PageLayout.astro';

interface Props {
  title: string;
  description?: string;
  breadcrumbs: Array<{ label: string; href?: string }>;
  jsonLd?: Record<string, unknown>;
}

const { title, description, breadcrumbs, jsonLd } = Astro.props;
---

<PageLayout title={title} description={description} jsonLd={jsonLd}>
  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b border-gray-200" aria-label="Breadcrumb">
    <div class="container-site py-3">
      <ol class="flex items-center gap-2 text-sm text-gray-500">
        {breadcrumbs.map((crumb, i) => (
          <li class="flex items-center gap-2">
            {i > 0 && (
              <svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
            )}
            {crumb.href ? (
              <a href={crumb.href} class="hover:text-primary-600 transition-colors">{crumb.label}</a>
            ) : (
              <span class="text-gray-900 font-medium">{crumb.label}</span>
            )}
          </li>
        ))}
      </ol>
    </div>
  </nav>

  <slot />
</PageLayout>
