---
import PageLayout from '../../layouts/PageLayout.astro';
import Breadcrumbs from '../../components/layout/Breadcrumbs.astro';
import { getCollection } from 'astro:content';
import { INDUSTRIES, SITE } from '../../lib/constants/site';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Resources' },
];

const blogPosts = await getCollection('blog', ({ data }) => !data.draft);
const latestPosts = blogPosts
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);

const resourceTypes = [
  {
    title: 'Technical Data Sheets (TDS)',
    description: 'Detailed product specifications including physical, thermal, electrical, and mechanical properties. Essential for material selection and qualification.',
    icon: 'document',
    href: '/products',
    linkText: 'Browse Products for TDS',
  },
  {
    title: 'Safety Data Sheets (SDS)',
    description: 'Comprehensive safety and handling information including hazard identification, first aid measures, storage requirements, and regulatory compliance data.',
    icon: 'shield',
    href: '/products',
    linkText: 'Browse Products for SDS',
  },
  {
    title: 'Application Notes',
    description: 'Engineering guides and best practices for applying our materials in specific use cases. Includes process parameters, equipment recommendations, and troubleshooting tips.',
    icon: 'beaker',
    href: '/blog',
    linkText: 'Read Application Notes',
  },
  {
    title: 'Blog Articles',
    description: 'Technical insights, industry trends, and material science knowledge from our team of engineers and scientists. Stay current with the latest in specialty chemicals.',
    icon: 'pencil',
    href: '/blog',
    linkText: 'Read Our Blog',
  },
];

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Technical Resources - Krayden',
  description: 'Access technical data sheets, safety data sheets, application notes, and engineering guides for Krayden specialty chemicals and electronic materials.',
  url: `${SITE.url}/resources/`,
  isPartOf: {
    '@type': 'WebSite',
    name: SITE.name,
    url: SITE.url,
  },
};
---

<PageLayout
  title="Technical Resources - Data Sheets & Guides"
  description="Access Krayden technical data sheets (TDS), safety data sheets (SDS), application notes, and engineering guides for specialty chemicals and electronic materials."
  jsonLd={jsonLd}
>
  <Breadcrumbs items={breadcrumbs} />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-navy-900 to-primary-800 text-white">
    <div class="container-site py-12 lg:py-16">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold leading-tight mb-4">Technical Resources</h1>
        <p class="text-lg text-primary-100 leading-relaxed">
          Access our library of technical documentation, application guides, and engineering
          resources to support your material selection and design process.
        </p>
      </div>
    </div>
  </section>

  <!-- Resource Types -->
  <section class="py-12 lg:py-16">
    <div class="container-site">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-navy-900 mb-4">Resource Library</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Find the documentation you need, from product specifications to application engineering guides.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {resourceTypes.map((resource) => (
          <a
            href={resource.href}
            class="group bg-white rounded-lg border border-gray-200 p-6 lg:p-8 hover:shadow-lg hover:border-primary-300 transition-all duration-200"
          >
            <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4">
              {resource.icon === 'document' && (
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              )}
              {resource.icon === 'shield' && (
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {resource.icon === 'beaker' && (
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                </svg>
              )}
              {resource.icon === 'pencil' && (
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold text-navy-900 group-hover:text-primary-600 transition-colors mb-3">
              {resource.title}
            </h3>
            <p class="text-gray-600 leading-relaxed mb-4">{resource.description}</p>
            <span class="inline-flex items-center gap-1 text-sm font-medium text-primary-600">
              {resource.linkText}
              <svg class="h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  {latestPosts.length > 0 && (
    <section class="py-12 lg:py-16 bg-gray-50">
      <div class="container-site">
        <div class="flex items-center justify-between mb-10">
          <div>
            <h2 class="text-3xl font-bold text-navy-900 mb-2">Latest Technical Articles</h2>
            <p class="text-gray-600">Recent insights from our engineering and materials science team.</p>
          </div>
          <a href="/blog" class="btn-secondary hidden sm:inline-flex">
            View All Articles
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {latestPosts.map((post) => (
            <a
              href={`/blog/${post.data.slug}`}
              class="group bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg hover:border-primary-300 transition-all duration-200"
            >
              <div class="p-6">
                <span class="text-xs font-medium text-primary-600 uppercase tracking-wider">
                  {post.data.category}
                </span>
                <h3 class="text-lg font-semibold text-navy-900 mt-2 group-hover:text-primary-600 transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                <p class="text-sm text-gray-600 mt-2 line-clamp-3">{post.data.excerpt}</p>
                <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
                  <span class="text-sm font-medium text-primary-600">Read Article</span>
                  <span class="text-xs text-gray-400">
                    {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  </span>
                </div>
              </div>
            </a>
          ))}
        </div>

        <div class="text-center mt-8 sm:hidden">
          <a href="/blog" class="btn-secondary">View All Articles</a>
        </div>
      </div>
    </section>
  )}

  <!-- Industry Solutions -->
  <section class="py-12 lg:py-16">
    <div class="container-site">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-navy-900 mb-4">Industry Solutions</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          We provide material solutions and technical documentation tailored to the requirements
          of each industry we serve.
        </p>
      </div>
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-5 gap-4">
        {INDUSTRIES.map((industry) => (
          <div class="bg-gray-50 rounded-lg border border-gray-200 p-4 text-center hover:border-primary-300 hover:bg-primary-50 transition-all duration-200">
            <span class="text-sm font-medium text-navy-900">{industry}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary-700">
    <div class="container-site text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Need Custom Technical Support?</h2>
      <p class="text-primary-100 max-w-2xl mx-auto mb-8">
        Cannot find the documentation you need? Our application engineers can provide custom
        technical guidance, material recommendations, and qualification support for your specific use case.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contact" class="btn-accent text-base px-6 py-3">Contact Our Engineers</a>
        <a href="/products" class="bg-white/10 text-white border border-white/30 hover:bg-white/20 inline-flex items-center justify-center px-6 py-3 rounded-md font-semibold text-base transition-all">
          Browse Products
        </a>
      </div>
    </div>
  </section>
</PageLayout>
