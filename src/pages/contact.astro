---
import PageLayout from '../layouts/PageLayout.astro';
import Breadcrumbs from '../components/layout/Breadcrumbs.astro';
import Input from '../components/ui/Input.astro';
import ContactForm from '../components/forms/ContactForm.svelte';
import { SITE } from '../lib/constants/site';

const breadcrumbs = [
  { label: 'Home', href: '/' },
  { label: 'Contact' },
];

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'ContactPage',
  name: 'Contact Krayden',
  url: `${SITE.url}/contact/`,
  description: 'Contact Krayden for specialty chemicals, electronic materials, thermal interface materials, and adhesives. Reach our sales and technical support teams.',
  mainEntity: {
    '@type': 'Organization',
    name: 'Krayden',
    url: SITE.url,
    email: SITE.email,
    contactPoint: [
      {
        '@type': 'ContactPoint',
        email: SITE.email,
        contactType: 'sales',
        availableLanguage: ['English'],
        areaServed: ['US', 'CA', 'EU'],
      },
      {
        '@type': 'ContactPoint',
        email: SITE.email,
        contactType: 'technical support',
        availableLanguage: ['English'],
      },
    ],
  },
};
---

<PageLayout
  title="Contact Us - Sales & Technical Support"
  description="Contact Krayden for specialty chemicals, electronic materials, thermal interface materials, and adhesives. Reach our sales and technical support teams."
  jsonLd={jsonLd}
>
  <Breadcrumbs items={breadcrumbs} />

  <!-- Page Header -->
  <section class="bg-gradient-to-br from-navy-900 to-primary-800 text-white">
    <div class="container-site py-12 lg:py-16">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold leading-tight mb-4">Contact Us</h1>
        <p class="text-lg text-primary-100 leading-relaxed">
          Have a question about our products or need technical support? Our team of materials
          specialists is here to help you find the right solution.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Content -->
  <section class="py-12 lg:py-16">
    <div class="container-site">
      <div class="grid grid-cols-1 lg:grid-cols-5 gap-12">

        <!-- Contact Information -->
        <div class="lg:col-span-2">
          <h2 class="text-2xl font-bold text-navy-900 mb-6">Get in Touch</h2>

          <!-- Email -->
          <div class="mb-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-navy-900 mb-1">Email</h3>
                <a href={`mailto:${SITE.email}`} class="text-primary-600 hover:text-primary-700 transition-colors">
                  {SITE.email}
                </a>
                <p class="text-sm text-gray-500 mt-1">We typically respond within one business day.</p>
              </div>
            </div>
          </div>

          <!-- Company -->
          <div class="mb-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-navy-900 mb-1">Krayden</h3>
                <p class="text-sm text-gray-600">Specialty Chemicals & Electronic Materials Supplier</p>
              </div>
            </div>
          </div>

          <!-- Office Locations -->
          <div class="mb-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-navy-900 mb-2">Office Locations</h3>
                <div class="space-y-3">
                  <div>
                    <p class="text-sm font-medium text-gray-700">North America</p>
                    <p class="text-sm text-gray-500">Sales, distribution, and technical support</p>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-700">Europe</p>
                    <p class="text-sm text-gray-500">European sales and distribution center</p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Urgent Inquiries -->
          <div class="bg-accent-500/10 border border-accent-500/20 rounded-lg p-5">
            <h3 class="font-semibold text-navy-900 mb-2">Urgent Inquiries</h3>
            <p class="text-sm text-gray-600 mb-3">
              For time-sensitive material requirements or production-critical orders, please email
              us directly with "URGENT" in the subject line and we will prioritize your request.
            </p>
            <a href={`mailto:${SITE.email}?subject=URGENT%20Inquiry`} class="btn-accent text-sm">
              Send Urgent Email
            </a>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="lg:col-span-3">
          <div class="bg-white rounded-lg border border-gray-200 p-6 lg:p-8">
            <h2 class="text-2xl font-bold text-navy-900 mb-2">Send Us a Message</h2>
            <p class="text-gray-600 mb-6">
              Fill out the form below and our team will get back to you as soon as possible.
            </p>

            <ContactForm client:idle />
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Additional Support Section -->
  <section class="py-12 lg:py-16 bg-gray-50">
    <div class="container-site">
      <div class="text-center mb-10">
        <h2 class="text-2xl font-bold text-navy-900 mb-4">How Can We Help?</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-navy-900 mb-2">Request a Quote</h3>
          <p class="text-sm text-gray-600 mb-4">
            Need pricing for specific products or volumes? Submit a quote request and we will respond promptly.
          </p>
          <a href="/quote-request" class="text-sm font-medium text-primary-600 hover:text-primary-700">
            Get a Quote &rarr;
          </a>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-navy-900 mb-2">Technical Resources</h3>
          <p class="text-sm text-gray-600 mb-4">
            Access technical data sheets, safety data sheets, and application guides for our products.
          </p>
          <a href="/resources" class="text-sm font-medium text-primary-600 hover:text-primary-700">
            Browse Resources &rarr;
          </a>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-navy-900 mb-2">Browse Products</h3>
          <p class="text-sm text-gray-600 mb-4">
            Explore our full catalog of specialty chemicals and electronic materials.
          </p>
          <a href="/products" class="text-sm font-medium text-primary-600 hover:text-primary-700">
            View Products &rarr;
          </a>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
