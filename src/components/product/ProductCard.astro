---
import Badge from '../ui/Badge.astro';

interface Props {
  name: string;
  slug: string;
  sku: string;
  category: string;
  categoryName?: string;
  shortDescription: string;
  specifications: Record<string, string>;
  featured?: boolean;
  featuredImage?: string;
}

const { name, slug, sku, category, categoryName, shortDescription, specifications, featured, featuredImage } = Astro.props;
---

<article class="group bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-lg hover:border-primary-300 transition-all duration-200">
  {featuredImage && (
    <a href={`/products/${category}/${slug}`} class="block aspect-video overflow-hidden bg-gray-50">
      <img src={featuredImage} alt={name} class="h-full w-full object-contain p-4 group-hover:scale-105 transition-transform duration-200" loading="lazy" />
    </a>
  )}
  <div class="p-6">
    <div class="flex items-center gap-2">
      {categoryName && (
        <span class="text-xs font-medium text-primary-600 uppercase tracking-wider">
          {categoryName}
        </span>
      )}
      {featured && <Badge variant="primary" size="sm">Featured</Badge>}
    </div>

    <h3 class="text-lg font-semibold text-navy-900 mt-2 group-hover:text-primary-600 transition-colors">
      <a href={`/products/${category}/${slug}`}>{name}</a>
    </h3>

    <p class="text-sm text-gray-600 mt-2 line-clamp-2">{shortDescription}</p>

    <div class="mt-4 space-y-1">
      {Object.entries(specifications).slice(0, 3).map(([key, value]) => (
        <div class="flex justify-between text-xs">
          <span class="text-gray-500">{key}</span>
          <span class="font-medium text-gray-700">{value}</span>
        </div>
      ))}
    </div>

    <div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
      <a
        href={`/products/${category}/${slug}`}
        class="text-sm font-medium text-primary-600 hover:text-primary-700"
      >
        View Details
      </a>
      <span class="text-xs text-gray-400">SKU: {sku}</span>
    </div>
  </div>
</article>
