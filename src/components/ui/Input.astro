---
interface Props {
  label: string;
  name: string;
  type?: string;
  placeholder?: string;
  required?: boolean;
  error?: string;
  value?: string;
  class?: string;
}

const {
  label,
  name,
  type = 'text',
  placeholder,
  required = false,
  error,
  value,
  class: className = '',
} = Astro.props;
---

<div class={`space-y-1.5 ${className}`}>
  <label for={name} class="block text-sm font-medium text-gray-700">
    {label}
    {required && <span class="text-error-500 ml-0.5">*</span>}
  </label>
  <input
    id={name}
    name={name}
    type={type}
    placeholder={placeholder}
    required={required}
    value={value}
    class:list={[
      'w-full rounded-md border px-3 py-2 text-sm text-gray-900 placeholder-gray-400 transition-colors',
      'focus:border-primary-500 focus:ring-1 focus:ring-primary-500 focus:outline-none',
      error ? 'border-error-500' : 'border-gray-300',
    ]}
  />
  {error && <p class="text-xs text-error-500">{error}</p>}
</div>
