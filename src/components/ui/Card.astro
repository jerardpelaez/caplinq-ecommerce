---
interface Props {
  href?: string;
  variant?: 'default' | 'bordered' | 'elevated';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  href,
  variant = 'bordered',
  padding = 'md',
  class: className = '',
} = Astro.props;

const variants: Record<string, string> = {
  default: 'bg-white',
  bordered: 'bg-white rounded-lg border border-gray-200',
  elevated: 'bg-white rounded-lg shadow-md',
};

const paddings: Record<string, string> = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const interactive = href ? 'group hover:shadow-lg hover:border-primary-300 transition-all duration-200' : '';

const classes = [variants[variant], paddings[padding], interactive, className].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
